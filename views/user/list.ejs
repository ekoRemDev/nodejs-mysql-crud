<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>



<div class="container">
	<!-- Page Content goes here -->

	<% if (messages.error) { %>
		<p style="color:red"><%- messages.error %></p>
	<% } %>

	<% if (messages.success) { %>
		<p style="color:green"><%- messages.success %></p>
	<% } %>
	<table class="table"  width='100%' border=0>

		<tr style='text-align:left; background-color:#CCC'>
			<th>ID</th>
			<th>Name</th>
			<th>Surname</th>
			<th>Age</th>
			<th>Email</th>
			<th>Birthday</th>
			<th>Address</th>
			<th>Identification ID</th>
			<th>History</th>
			<th>Phone</th>
			<th>...</th>
			<th>...</th>
			<th>...</th>

		</tr>

		<!--
            Using FOREACH LOOP for the users array

            myArray.forEach(function(el, index) {
                // el - current element, i - index
            });
        -->
		<% if (data) { %>
			<% data.forEach(function(user){ %>
				<tr>
					<td><%= user.id %> </td>
					<td><%= user.name %></td>
					<td><%= user.surname %></td>
					<td><%= user.age %></td>
					<td><%= user.email %></td>
					<td><%= user.birthday %></td>
					<td><%= user.address %></td>
					<td><%= user.identificationNo %></td>
					<td><%= user.history %></td>
					<td><%= user.phonenumber %></td>
					<td><a class="btn btn-info btn-sm" href='/users/detail/<%= user.id %>'>Details</a></td>
					<td><a class="btn btn-danger btn-sm" href='/users/edit/<%= user.id %>'>Edit</a></td>
					<td>
						<div style="float:left">
							<form method="post" action="/users/delete/<%= user.id %>" style="float:right">

								<input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" class="btn btn-primary btn-sm"/>
								<input type="hidden" name="_method" value="DELETE" />
							</form>
						</div>
					</td>





				</tr>
			<% }) %>
		<% } %>

	</table>



</div>




<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
