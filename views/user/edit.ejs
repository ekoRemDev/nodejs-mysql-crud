<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>


<div class="container">

    <% if (messages.error) { %>
        <p style="color:red"><%- messages.error %></p>
    <% } %>

    <% if (messages.success) { %>
        <p style="color:green"><%- messages.success %></p>
    <% } %>

    <form action="/users/edit/<%= id %>" method="post" name="form1">
        <table width="25%" border="0">



            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name Please"  value="<%= name %>">
            </div>


            <div class="form-group">
                <label for="surname">Surname</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter Surname Please"  value="<%= surname %>">
            </div>


            <div class="form-group">
                <label for="age">How old are you?</label>
                <select class="form-control" id="age" name="age" value="<%= age%>>">
                    <option value="" selected="selected">Select Your Age Please</option>
                    <option <% if(age === 1) { %> selected <% } else { %> <% } %> >1</option>
                    <option <% if(age === 2) { %> selected <% } else { %> <% } %> >2</option>
                    <option <% if(age === 3) { %> selected <% } else { %> <% } %> >3</option>
                    <option <% if(age === 4) { %> selected <% } else { %> <% } %> >4</option>
                    <option <% if(age === 5) { %> selected <% } else { %> <% } %> >5</option>
                </select>
            </div>


            <div class="form-group">
                <label for="birthday">Birthday</label>
                <input type="text" class="form-control" id="birthday" name="birthday" placeholder="Enter Birthday Please"  value="<%= birthday %>">
            </div>


            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter Valid Email Please"  value="<%= email %>">
            </div>


            <div class="form-group">
                <label for="name">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address Please"  value="<%= address %>">
            </div>

            <div class="form-group">
                <label for="name">identification No</label>
                <input type="text" class="form-control" id="identificationNo" name="identificationNo" placeholder="Enter identification No Please"  value="<%= identificationNo %>">
            </div>

            <div class="form-group">
                <label for="name">History</label>
                <input type="text" class="form-control" id="history" name="history" placeholder="Enter History Please"  value="<%= history %>">
            </div>

            <div class="form-group">
                <label for="name">Phone Number</label>
                <input type="text" class="form-control" id="phonenumber" name="phonenumber" placeholder="Enter Phone Number Please"  value="<%= phonenumber %>">
            </div>

            <div class="form-group">
                <button class="btn btn-warning" type="submit" name="action" onClick="return confirm('Are you sure you want to update record?')">Update Record</button>
            </div>


        </table>
        <input type="hidden" name="_method" value="PUT"/>
    </form>
</div>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
